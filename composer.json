{
    "name": "world-builder",
    "type": "wordpress-theme",
    "description": "A WordPress theme designed to be used a tool for world builders.",
    "keywords": [
        "WordPress",
        "Themes"
    ],
    "homepage": "https://github.com/andrewremery/world-builder#readme",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Andrew R Emery",
            "homepage": "https://andrewremery.com/"
        }
    ],
    "require": {
        "php": ">=5.6",
        "composer/installers": "v1.0.12",
        "cmb2/cmb2": "dev-master"
    },
    "extra": {
        "installer-paths": {
            "../../plugins/{$name}/": ["cmb2/cmb2"]
        }
    },
    "autoload": {
        "files": ["../../plugins/cmb2/init.php"]
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "wptrt/wpthemereview": "^0.2.1",
        "php-parallel-lint/php-parallel-lint": "^1.2.0",
        "wp-cli/i18n-command": "^2.2.5"
    },
    "scripts": {
        "lint:wpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
        "lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor .",
        "make-pot": "wp i18n make-pot . languages/_s.pot"
    },
    "support": {
        "issues": "https://github.com/andrewremery/world-builder/issues",
        "source": "https://github.com/andrewremery/world-builder"
    }
}
